@model Tasks.Models.Task

@{
    ViewBag.Title = "CreateTask";
}

<h2>CreateTask</h2>


@using (Html.BeginForm())
{
        <div class="form-group">
            <label for="Name">Name</label>
            <input name="Name" type="text" class="form-control" placeholder="Your Name">
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input name="Description" type="text" class="form-control" placeholder="Task Description">
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(x=>x.Isdone)
                Is the Task Completed
            </label>
        </div>

        <p>
            <button type="submit" class="btn btn-primary btn-lg" value="Create" >Submit Task</button>
            
        </p>

}
